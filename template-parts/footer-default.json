{
  "name": "irving/container",
  "config": {
    "id": "footer-default",
    "style": {
      "background-color": "variants.irving/container.footerWrapper.backgroundColor",
      "color": "white",
      "font-family": "header.fontFamily",
      "padding": "2rem 0"
    }
  },
  "children": [
    {
      "name": "irving/container",
      "config": {
        "max_width": "lg"
      },
      "children": [
        {
          "name": "styled-css-grid/grid",
          "config": {
            "columns": "3fr 1fr 1fr 1fr",
            "gap": "20px",
            "id": "footer__grid"
          },
          "children": [
            {
              "name": "irving/container",
              "children": [
                {
                  "name": "irving/site-logo"
                },
                {
                  "name": "irving/get-bloginfo",
                  "config": {
                    "key": "description"
                  },
                  "children": [
                    {
                      "name": "irving/text",
                      "use_context": {
                        "irving/bloginfo": "content"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "name": "irving/site-menu",
              "theme": "footer_default",
              "config": {
                "display_name": true,
                "location": "footer-left"
              }
            },
            {
              "name": "irving/site-menu",
              "theme": "footer_default",
              "config": {
                "display_name": true,
                "location": "footer-center"
              }
            },
            {
              "name": "irving/site-menu",
              "theme": "footer_default",
              "config": {
                "display_name": true,
                "location": "footer-right"
              }
            }

          ]
        }
      ]
    }
  ]
}
