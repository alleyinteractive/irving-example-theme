{
	"name": "irving/post-list",
	"config": {
		"query_args": {
			"post_type": "post",
			"posts_per_page": 4
		},
		"templates": {
			"before": [
				{
					"name": "irving/text",
					"theme": "h2",
					"config": {
						"content": "Related Posts",
						"tag": "h3"
					}
				}
			],
			"wrapper": [
				{
					"name": "styled-css-grid/grid",
					"config": {
						"columns": "repeat(auto-fit, minmax(200px, 1fr))",
						"gap": "2rem",
						"style": {
							"margin-bottom": "2rem"
						}
					}
				}
			],
			"item": [
				{ "name": "template-parts/post-card-small" }
			],
			"after": [
				{
					"name": "irving/container",
					"config": {
						"style": {
							"margin_bottom": "2rem"
						}
					}
				}
			]
		}
	}
}